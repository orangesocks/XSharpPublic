#xcommand STORE <value> TO ARRAY <VAR> => __FoxFillArray( <VAR>, <value> )

// Rules for FIELD matches that are used in several other commands
// Note that the FoxPro fiels rule is difference because of the memo clause

#translate FIELDS <f1> [,<fn> ]  [<memo: MEMO>]   => ;
           __DBFIELDLIST__ __DbFieldList( {<(f1)>[, <(fn)> ]}, <.memo.>)

// FIELDS LIKE and optionally EXCEPT
#translate FIELDS LIKE <%include%>  [EXCEPT <%exclude%>]  [<memo: MEMO>] => ;
            __DBFIELDWILD__  __DbFieldWild(#<include>, #<exclude>, <.memo.>)

// FIELDS EXCEPT
#translate FIELDS EXCEPT <%exclude%>   [<memo: MEMO>] => ;
            __DBFIELDWILD__  __DbFieldList(/*flds*/, /*include*/, #<exclude>, <.memo.>)

// FIELDS EXCEPT .. LIKE is reversed
#translate FIELDS EXCEPT <%exclude%>  LIKE <%include%>   => ;
           FIELDS LIKE <include>    EXCEPT <exclude>

// scatter to array
#command SCATTER [__DBFIELDLIST__ <fldlist>] [__DBFIELDWILD__ <fldwild> ] [<blank: BLANK>] TO <arrayName> ;
          => <arrayName> := __ScatterArray( iif( <.fldlist.>, <!fldlist!>, <!fldwild!>), <.blank.> )

// Note that the objectName parameter is passed as a string because objectName may not have been created yet (when it is a MEMVAR).
// For SCATTER NAME to work with LOCALS and the ADDITIVE clause we have marked __ScatterObject with the
// attribute that it needs access to locals

#command SCATTER [__DBFIELDLIST__ <fldlist>] [__DBFIELDWILD__ <fldwild> ] [<blank: BLANK>] NAME <objectName> [<add: ADDITIVE>];
          => <objectName> := __ScatterObject( IIF( <.fldlist.>, <!fldlist!>, <!fldwild!>), <.blank.> , <"objectName">,  <.add.>)

// SCATTER MemVar must be last. DO NOT USE TO MEMBER !
#command SCATTER [__DBFIELDLIST__ <fldlist>] [__DBFIELDWILD__ <fldwild> ] [<blank: BLANK>] MEMVAR ;
          =>  __ScatterMemVar( IIF( <.fldlist.>, <!fldlist!>, <!fldwild!>), <.blank.> )

#command GATHER FROM <arrayName> [__DBFIELDLIST__ <fldlist>] [__DBFIELDWILD__ <fldwild> ]  ;
          => __GatherArray(<arrayName>, IIF( <.fldlist.>, <!fldlist!>, <!fldwild!>) )

#command GATHER FROM NAME <objectName> [__DBFIELDLIST__ <fldlist>] [__DBFIELDWILD__ <fldwild> ]  ;
          => __GatherObject(<objectName>, IIF( <.fldlist.>, <!fldlist!>, <!fldwild!>) )

//GATHER MemVar must be last, otherwise the compiler thinks that MEMVAR is the name of an array
#command GATHER FROM MEMVAR [__DBFIELDLIST__ <fldlist>] [__DBFIELDWILD__ <fldwild> ]  ;
          => __GatherMemVar( IIF( <.fldlist.>, <!fldlist!>, <!fldwild!>) )


