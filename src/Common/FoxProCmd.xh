/// Index on command with Binary, Collate, Candidate and Compact clauses

#command SORT  TO <(file)> ON <fields,...>    ;
         [<asc:ASCENDING>]                    ;
         [<desc:DESCENDING>]                  ;
         [For <lfor>]                         ;
         [While <lwhile>]                     ;
         [Next <nNext>]                       ;
         [RECORD <rec>]                       ;
         [<rest:REST>]                        ;
         [<noopt: NOOPTIMIZE>]                ;
         [__FOXLIST__ <fldlist>]              ;
		 [__FOXWILD__ <fldwild> ]             ;
         [ALL]                                ;
                                              ;
      => DbSortFox(                           ;
                   <(file)>, { <(fields)> },  ;
                   <{lfor}>, <{lwhile}>, <nNext>, <rec>, <.rest.>, <.noopt.> ;
                 , Iif(<.asc.> .or. <.desc.>, <.desc.>, Nil),           ;
                   Iif( <.fldlist.>, <!fldlist!>, <!fldwild!>) )





